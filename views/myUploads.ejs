<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Decent Home Page</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>

<body class="bg-gray-100">
<nav class="bg-blue-500 p-4">
    <div class="container mx-auto flex justify-between items-center">
        <h2 class="text-white text-xl">TRIEMPHED</h2>
        <ul class="flex space-x-7">
            <% if (userId.type==='seller' ) { %>
                <li><a href="/sell" class="text-white">Sell</a></li>
                <% } %>
                <% if (userId.type==='seller' ) { %>
                    <li><a href="/myUploads" class="text-white">My uploads</a></li>
                    <% } %>
                    <li><a href="/cart" class="text-white">Cart</a></li>
                    <li><a href="/orders" class="text-white">Orders</a></li>
                    <li><a href="/wishlist" class="text-white">Wishlist</a></li>
                    <li><a href="/profile" class="text-white">profile</a></li>
                    <li><a href="/logout" class="text-white">Log-Out</a></li>
        </ul>
    </div>
</nav>
<!-- myUploads.ejs -->

<!-- Display uploaded products for the current user's profile -->
<div class="container mx-auto mt-8">
    <% if (uploadedProducts && uploadedProducts.length > 0) { %>
      <% uploadedProducts.forEach(function(product) { %>
        <% if (products.seller.toString() === user._id.toString()) { %>
          <div class="bg-white p-8 rounded-lg shadow-md flex flex-col md:flex-row items-center mb-8">
            <!-- Product Photo -->
            <img src="/images/uploads/<%= product.image %>" alt="Product Image" class="w-48 h-48 object-cover object-center mb-4 md:mb-0 md:mr-8">
        
            <!-- Product Details -->
            <div>
              <!-- Product Name -->
              <h1 class="text-2xl font-bold mb-4"><%= product.productName %></h1>
              <!-- Product Price -->
              <p class="text-xl font-semibold mb-4">$<%= product.price %></p>
              <!-- Product Description -->
              <p class="text-gray-600 mb-4"><%= product.description %></p>
            </div>
          </div>
        <% } %>
      <% }); %>
    <% } else { %>
      <p>No products uploaded yet.</p>
    <% } %>
  </div>
  
  

</body>

</html>