<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100">

<!-- Navigation bar -->
<nav class="bg-gray-800 p-4">
    <div class="container mx-auto flex justify-between items-center">
        <a href="#" class="text-white font-bold text-lg">TRIUMPHED</a>
        <ul class="flex space-x-4">
            <li><a href="/home" class="text-white">Home</a></li>
            <li><a href="/logout" class="text-white">Logout</a></li>
        </ul>
    </div>
</nav>

<!-- Main content -->
<div class="container mx-auto mt-8 text-center flex items-center justify-center">
    <div class="bg-white p-8 rounded-lg shadow-md">
        <h1 class="text-2xl font-bold mb-4">Profile</h1>
        <!-- Profile Picture -->
        <div class="mb-4  items-center justify-center text-center">
            <form id="imgform" hidden method="post" action="/uploadProfileImage" enctype="multipart/form-data">
                <input id="Uploadpicform" type="file" name="image">
            </form>
            <div id="imagediv" class="flex items-center justify-center mb-4">
                <img src="/images/uploads/<%= user.picture %>" alt="" class="w-20 h-20 object-cover object-center border-2 border-black bg-red-500 rounded-full object-cover mr-4">
            </div>
            <div class="flex items-center justify-center gap-3">
                <h2 class="font-bold mb-2">Username:</h2>
                <p class="text-gray-600 -mt-2"><%= user.username %></p>
            </div>
        </div>
        <!-- User Information -->
        <div class="mb-4 flex items-center justify-center gap-3">
            <h2 class="font-bold mb-2">Email:</h2>
            <p class="text-gray-600 -mt-2"><%= user.email %></p>
        </div>
        <div class="mb-4 flex items-center justify-center gap-3">
            <h2 class="font-bold mb-2">Contact:</h2>
            <p class="text-gray-600 -mt-2"><%= user.contact %></p>
        </div>
        <!-- My Cart Section -->
        <div class="mb-4 flex items-center justify-center gap-4">
            <h2 class="font-bold mb-2">My Cart:</h2>
            <button class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded">View Cart</button>
        </div>
        <!-- My Orders Section -->
        <div class="mb-4 flex items-center justify-center gap-4">
            <h2 class="font-bold mb-2">My Orders:</h2>
            <button class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded">View Orders</button>
        </div>
        <!-- My Wishlist Section -->
        <div class="flex items-center justify-center gap-4">
            <h2 class="font-bold mb-2">My Wishlist:</h2>
            <button class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded">View Wishlist</button>
        </div>
        <div class="flex items-center justify-center gap-4">
            <h2 class="font-bold mb-2">My Uploads:</h2>
            <button class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded">View uploads</button>
        </div>
    </div>
</div>
<script>
    document.querySelector("#imagediv").addEventListener('click', function(){
        document.querySelector("#Uploadpicform").click();
    })

    document.querySelector("#Uploadpicform").addEventListener("change", function(){
      document.querySelector("#imgform").submit()
    })
</script>

</body>
</html>
