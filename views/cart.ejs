<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cart</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>

<body class="bg-gray-100">

    <nav class="bg-gray-800 p-4">
        <div class="container mx-auto flex justify-between items-center">
            <a href="#" class="text-white font-bold text-lg">E-commerce App</a>
            <ul class="flex space-x-4">
                <li><a href="/profile" class="text-white">Profile</a></li>
                <li><a href="/logout" class="text-white">Logout</a></li>
            </ul>
        </div>
    </nav>

    <div class="container mx-auto mt-8">
        <h1 class="text-2xl font-bold mb-4">Your Cart</h1>
        <div class="grid grid-cols-1 gap-4">
            <% if (cart && cart.items && cart.items.length > 0) { %>
                <% cart.items.forEach(function(item) { %>
                    <div class="bg-white rounded-lg w-48 shadow-md overflow-hidden">
                        <img src="/images/uploads/<%= item.productId.image %>" class="w-full h-48 object-cover object-center">
                        <div class="p-4">
                            <h3 class="font-bold text-lg mb-2"><%= item.productId.productName %></h3>
                            <p class="text-gray-600 mb-2"><%= item.productId.description %></p>
                            <p class="text-gray-600 mb-2">$<%= item.productId.price %></p>
                        </div>
                        <form action="/remove-from-cart" method="post">
                            <input type="hidden" name="productId" value="<%= item.productId._id %>">
                            <button type="submit" class="bg-red-500 hover:bg-red-600 text-white font-bold py-2 px-4 rounded">Remove from Cart</button>
                        </form>
                    </div>
                <% }) %>
            <% } else { %>
                <p>Your cart is empty</p>
            <% } %>
        </div>
    </div>

</body>

</html>